<%- include('partials/_header', {sesion_activa: sesionActiva}) %>

<div class="container">
    <div class="row">
        <form action="/modificar_contacto" method="post" class="col s5 offset-s5">
            <input type="hidden" name="id" value="<%= contacto._id %>">
            <div class="row">
                <div class="input-field col s6">
                    <input type="text" name="name" id="contact_name" class="validate" value="<%= contacto.nombre %>">
                    <label for="contact_name">Nombre del contacto</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <input type="text" name="detail" id="contact_detail" class="validate" value="<%= contacto.detalle %>">
                    <label for="contact_detail">Detalle</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <input type="text" name="number" id="contact_number" class="validate" value="<%= contacto.numero %>">
                    <label for="contact_number">Numero telefonico</label>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <button class="btn waves-effect waves-light" type="submit">Guardar cambios</button>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <a class="btn waves-effect waves-light cancelarEdicion" href="/listar_contactos">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>
<%- include('partials/_footer') %>