<%- include('partials/_header', {sesion_activa: sesionActiva}) %>
<div class="container">
    <div class="row">
        <form action="/insertar_contacto" method="post" class="col s4 offset-s4">
            <div class="row">
                <div class="input-field col s12">
                    <input type="text" name="name" id="contact_name" class="validate">
                    <label for="contact_name">Nombre del contacto</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input type="text" name="detail" id="contact_detail" class="validate">
                    <label for="contact_detail">Detalle</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input type="tel" name="number" id="contact_number" class="validate" pattern="[0-9]">
                    <label for="contact_number">Numero telefonico</label>
                </div>
            </div>
            <div class="row">
                <div class="col s3">
                    <a href="/" class="btn waves-effect waves-light">Volver</a>
                </div>
                <div class="col s3 offset-s5">
                    <button class="btn waves-effect waves-light" type="submit">Agendar</button>
                </div>
            </div>
           
        </form>
        <% if(error.status) { %>
            <div class="row">
                <div class="col s4 offset-s4">
                    <div class="card red darken-3 z-depth-5">
                        <div class="card-content white-text">
                            <span class="card-title">Error de registro de contacto</span>
                            <p><%= error.message %></p>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>
<%- include('partials/_footer') %>