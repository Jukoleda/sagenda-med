<%- include('partials/_header', {sesion_activa: false}) %>
<div class="container">
    <div class="row">
        <form action="/validar_registro" method="post" class="col s4 offset-s4">
            <div class="row">
                <div class="input-field col s12">
                    <input type="text" name="name" id="name" class="validate">
                    <label for="name">Nombre</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input type="text" name="user" id="username" class="validate">
                    <label for="username">Nombre de usuario</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input type="password" name="pass" id="pass" class="validate">
                    <label for="pass">Contraseña</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input type="password" name="pass2" id="pass2" class="validate">
                    <label for="pass2">Repetir contraseña</label>
                </div>
            </div>
            <div class="row">
                <div class="col s3">
                    <a href="/" class="btn waves-effect waves-light">Volver</a>
                </div>
                <div class="col s3 offset-s5">
                    <button class="btn waves-effect waves-light" type="submit">Registrarse</button>
                </div>
            </div>
        </form>
        <% if(error.status) { %>
            <div class="row">
                <div class="col s4 offset-s4">
                    <div class="card red darken-3 z-depth-5">
                        <div class="card-content white-text">
                            <span class="card-title">Error de registro de usuario</span>
                            <p><%= error.message %></p>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>


<%- include('partials/_footer') %>
